<div class="flex-1 text-grey-darker text-center bg-blue-light px-4 py-2 m-2" ...attributes>
  <h3 class="text-grey-lightest">{{@title}}  </h3>
  {{#draggable-object-target tagName="div" action=this.dropBehaviour}}
    {{#each @behaviours as |behaviour|}}
      {{#draggable-object content=behaviour}}
        <BehaviourList::BehaviourItem @description={{behaviour.description}} />
      {{/draggable-object}}
    {{/each}}

    {{!--Gross little fix for dodgy ember-drag-drop behaviour https://github.com/mharris717/ember-drag-drop/issues/67--}}
    <div class="w-full h-screen"></div>
  {{/draggable-object-target}}
</div>